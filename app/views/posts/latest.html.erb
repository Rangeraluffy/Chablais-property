<main role="main">
  <div class="jumbotron">
    <div class="container">
      <h1 class="display-3">Latest Posts by Peillex Property</h1>
      <p>Stay up to date with the latest property news at Peillex Property</p>
    </div>
  </div>

  <div class="container">
    <% if @posts.empty? %>
      <p>No posts to display</p>
    <% else %>
      <% @posts.each do |post| %>
        <div class="row">
          <div class="col">
            <h2><%= post.title %></h2>
            <p><%= post.summary %></p>
            <%= link_to "Read more", post_path(post), class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</main>
