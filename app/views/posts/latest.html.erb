  <!-- ======= Intro About ======= -->
  <section class="intro-single">
    <div class="container">
      <div class="row">
        <div class="col-md-12 col-lg-8">
          <div class="title-single-box">
            <h1>Latest posts by Peillex Property</h1>
              <h3 class="sinse-title"">Stay up to date with the latest property news at Peillex Property</h3>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- End Intro About -->

  <div class="container">
    <% if @posts.empty? %>
      <p>No posts to display</p>
    <% else %>
      <% @posts.each do |post| %>
        <div class="row">
          <div class="col">
            <h2><%= post.title %></h2>
            <p><%= post.image %></p>
            <p><%= post.summary %></p>
            <%= link_to "Read more", post_path(post), class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</main>
