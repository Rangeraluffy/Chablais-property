<p id="notice"><%= notice %></p>
<!-- ======= Intro About ======= -->
<section class="intro-single pt-4 pb-4">
  <div class="container">
    <div class="row">
      <div class="col-md-12 col-lg-8">
        <div class="title-single-box">
          <h1>Posts</h1>
            <h2 class="sinse-title"><%= translate('resumeAllPosts') %></h2>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- End Intro About -->

<div class="tbl-header">
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Summary</th>
        <th>Active</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  </table>
</div>

  <div class="tbl-content">
     <table>
       <tbody>
         <% @posts.each do |post| %>
           <tr>
             <td><%= post.title %></td>
             <td><%= post.summary %></td>
             <td><%= post.active %></td>
             <td><%= link_to 'Show', post %></td>
             <td><%= link_to 'Edit', edit_post_path(post) %></td>
             <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
           </tr>
         <% end %>
       </tbody>
      </table>
  </div>

  <br>

  <%= link_to 'New Post', new_post_path, class: "btn btn-success mt-4 mb-4" %>
