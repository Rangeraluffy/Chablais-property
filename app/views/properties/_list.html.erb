<% properties.each do |property| %>
    <div class="col-sm-4">
      <div class="card-box-a card-shadow">


          <div class="property-thumb" style="background-image: url(<%= property_thumbnail_url (property)%>)">
            <%= link_to "", property_path(property) %>
          </div>


        <div class="card-overlay">
          <div class="card-overlay-a-content">
            <div class="card-header-a">
              <h2 class="card-title-a">
                <h2 class="title-property"><%= link_to property.name, property_path(property) %></h2>
                <br/>
                <p class="sub-title-property"><%= property.address %></p>
              </h2>
            </div>
            <div class="card-body-a">
              <div class="price-box d-flex">
                <span class="price-a"><%= link_to property.price%> $ </span>
              </div>
            </div>
            <div class="card-footer-a">
              <ul class="card-info d-flex justify-content-around">
                <li>
                  <h4 class="card-info-title">Area</h4>
                  <i class="mr-2 far fa-square"></i>
                  <span><%= link_to property.area%></span>
                </li>
                <li>
                  <h4 class="card-info-title">Rooms</h4>
                  <i class="mr-2 fas fa-bed"></i>
                  <span><%= link_to property.rooms%></span>
                </li>
                <li>
                  <h4 class="card-info-title">Bathrooms</h4>
                  <i class="mr-2 fas fa-bath"></i>
                  <span><%= link_to property.bathrooms%></span>
                </li>
                <li>
                  <h4 class="card-info-title">Garages</h4>
                  <i class="mr-2 fas fa-car"></i>
                  <span><%= link_to property.garages%></span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
<% end %>
