<%= form_with(model: property, local: true) do |form| %>
  <%= render "layouts/validation", item: @property %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", :required => 'required'%>
  </div>

  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_field :address, class: "form-control", :required => 'required'%>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class: "form-control", :required => 'required'%>
  </div>

  <div class="form-group">
    <%= form.label :rooms %>
    <%= form.number_field :rooms, class: "form-control", :required => 'required'%>
  </div>

  <div class="form-group">
    <%= form.label :bathrooms %>
    <%= form.number_field :bathrooms, class: "form-control", :required => 'required'%>
  </div>

  <div class="form-group">
    <%= form.label :bedrooms %>
    <%= form.number_field :bedrooms, class: "form-control", :required => 'required'%>
  </div>

  <div class="form-group">
    <%= form.label :area %>
    <%= form.number_field :area, class: "form-control", :required => 'required'%>
  </div>

  <div class="form-group">
    <%= form.label :garages %>
    <%= form.number_field :garages, class: "form-control", :required => 'required'%>
  </div>

  <div class="form-group">
    <%= form.label :for_sale %>
    <%= form.select :for_sale, options_for_select({ "Yes" => true, "No" => false }, @property.for_sale), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :offer %>
    <%= form.select :offer, options_for_select({ "Yes" => true, "No" => false }, @property.offer), class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :details %>
    <%= form.text_area :details, class: "form-control", :required => 'required'%>
  </div>

  <div class="form-group">
    <%= form.label :photo %>
    <%= form.file_field :photo, class: "form-control" %>
    <%= form.hidden_field :photo_cache %>

    <% if @property.photo.present? %>
      <%= image_tag @property.photo.thumb.url, class: "mt-4" %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.submit "Save property", class: "btn btn-lg btn-success" %>
    <%= link_to 'Back', properties_path, class: "btn btn-lg btn-secondary " %>
  </div>
<% end %>
