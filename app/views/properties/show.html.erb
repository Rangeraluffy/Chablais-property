<div class="container mt-5">
  <div class="row">
    <div class="col-sm-12 col-lg-8">
      <div class="title-single-box">
        <h1 class="title-single"><%= @property.name %></h1>
        <h3 class="sinse-title""><%= @property.address %></h3>
      </div>
    </div>
    <div class="col-sm-3 mb-2">
      <%= render "properties/agent_details", agent: @agent %>
    </div>
  </div>
</div>

<section class="property-single nav-arrow-b">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-sm-8">
        <div class="property-main-photo" style="background-image:url('<%= property_photo_url(@property)%>')">
          <div class="photo-overlay"></div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="summary-desciption row justify-content-between">
          <div class="col-md-5 col-lg-4">
            <div class="d-flex justify-content-center foo">
              <div class="card-header-c d-flex">
                  <div class="card-title-c align-self-center">
                    <h1 class="title-c"><%= @property.price > 0 ? number_to_currency(@property.price) : "For Sale" %></h1>
                    <p><%= link_to "Est. Price per Square metters #{ number_to_currency((@property.price / @property.area))}", "#", class: "price-metters text-center" %></p>
                  </div>
              </div>
            </div>
            <iframe class="map-show-property col-sm-12" width="480" height="240" style="border:0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d22037.378083050367!2d6.443705056292688!3d46.33620063721233!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x478c3e1f0e8c4b59%3A0xd44d2bcefe6419bc!2s74200%20Allinges!5e0!3m2!1sfr!2sfr!4v1633361806900!5m2!1sfr!2sfr=<%= @property.address.to_param %>" allowfullscreen></iframe>
            <% if account_signed_in? %>
              <%= link_to 'Edit', edit_property_path(@property), class: "btn btn-lg btn-success mt-4 col-sm-12" %>
            <% end %>
          </div>
          <div class="col-md-7 col-lg-7 section-md-t3">
            <div class="row">
              <div class="col-sm-12">
                <div class="title-box-d">
                  <h3 class="title-d">Property Description</h3>
                </div>
              </div>
              <div class="property-description col-sm-12">
                <p class="description color-text-a">
                  <%= @property.name %>
                  <div id="prop-details" class="mb-3">
                    <%= simple_format @property.details %>
                  </div>
                  <button id="toggleDetails" type="button" name="button" class="btn btn-outline-info col-sm-12">Show more</button>
              </div>
              <div class="row section-t3 col-sm-12">
                <div class="col-sm-12">
                  <div class="title-box-d">
                    <h3 class="title-d">Amenities</h3>
                  </div>
                </div>
                <div class="color-text-a">
                  <ul class="list-a no-margin">
                    <li><strong>Rooms</strong><br>
                      <span><i class="icons-amenities fas fa-home"></i><%= @property.rooms %></span>
                    </li>
                    <li><strong>Bathrooms</strong><br>
                      <span><i class="icons-amenities fas fa-bath"></i><%= @property.bathrooms %></span>
                    </li>
                    <li><strong>Bedrooms</strong><br>
                      <span><i class="icons-amenities fas fa-bed"></i><%= @property.bedrooms %></span>
                    </li>
                    <li><strong>Area</strong><br>
                      <span><i class="icons-amenities far fa-square"></i><%= @property.area %></span>
                    </li>
                    <li><strong>Garages</strong><br>
                      <span><i class="icons-amenities fas fa-car"></i><%= @property.garages %></span>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

    <!-- ======= Start Last Property ======= -->
    <section class="property-grid grid">
      <div class="container">
        <div class="title-single-box">
          <h1 class="title-single">Other properties by <%= @agent.full_name %></h1>
        </div>
        <div class="row">
          <%= render "properties/list", properties: @agent_properties%>
        </div>
      </div>
    </section>
    <!-- ======= End Last Property ======= -->
</section>
