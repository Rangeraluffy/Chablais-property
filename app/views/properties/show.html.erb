<div class="container">
  <div class="row">
    <div class="col-sm-12 col-lg-8">
      <div class="title-single-box">
        <h1 class="title-single"><%= @property.name %></h1>
        <span class="color-text-a"><%= @property.address %></span>
      </div>
    </div>
    <div class="col-sm-12 col-lg-4">
      <%= render "properties/agent_details" %>
    </div>
  </div>
</div>

<section class="property-single nav-arrow-b">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="property-main-photo" style="background-image:url('<%= property_photo_url(@property)%>')">
          <div class="photo-overlay"></div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <div class="summary-desciption row justify-content-between">
          <div class="col-md-5 col-lg-4">
            <div class="property-price d-flex justify-content-center foo">
              <div class="card-header-c d-flex">
                <div class="card-box-ico">
                  <div class="card-title-c align-self-center">
                    <h1 class="title-c"><%= @property.price > 0 ? number_to_currency(@property.price) : "For Sale" %></h1>
                    <p><%= link_to "Est. Price per Square metters #{ number_to_currency((@property.price / @property.area))}", "#", class: "price-metters" %></p>
                  </div>
                  <div class="card-title-c ">
                    <p><%= link_to "Can i afford this property ?", "#", class: "price-metters" %></p>
                  </div>
                </div>
              </div>
            </div>
            <div class="property-summary">
              <div class="row">
                <div class="col-sm-12">
                  <div class="title-box-d section-t4">
                    <h3 class="title-d">Quick Summary</h3>
                  </div>
                </div>
              </div>
              <div class="summary-list">
                <ul class="list">
                  <li class="d-flex justify-content-between">
                    <strong class="span-property-summary">Name :</strong>
                    <span><%= @property.name %></span>
                  </li>
                  <li class="d-flex justify-content-between">
                    <strong class="span-property-summary">Address :</strong>
                    <span><%= @property.address %></span>
                  </li>
                  <li class="d-flex justify-content-between">
                    <strong class="span-property-summary">Price :</strong>
                    <span><%= @property.price > 0 ? number_to_currency(@property.price) : "For Sale" %></span>
                  </li>
                  <li class="d-flex justify-content-between">
                    <strong class="span-property-summary">Rooms :</strong>
                    <span><%= @property.rooms %></span>
                  </li>
                  <li class="d-flex justify-content-between">
                    <strong class="span-property-summary">Bathrooms :</strong>
                    <span><%= @property.bathrooms %></span>
                  </li>
                  <li class="d-flex justify-content-between">
                    <strong class="span-property-summary">Bedrooms :</strong>
                    <span><%= @property.bedrooms %></span>
                  </li>
                  <li class="d-flex justify-content-between">
                    <strong class="span-property-summary">Area :</strong>
                    <span><%= @property.area %>mÂ²</span>
                  </li>
                  <li class="d-flex justify-content-between">
                    <strong class="span-property-summary">Garages :</strong>
                    <span><%= @property.garages %></span>
                  </li>
                </ul>
                <%= link_to 'Edit', edit_property_path(@property), class: "btn btn-lg btn-success" %>
              </div>
            </div>
          </div>
          <div class="col-md-7 col-lg-7 section-md-t3">
            <div class="row">
              <div class="col-sm-12">
                <div class="title-box-d">
                  <h3 class="title-d">Property Description</h3>
                </div>
              </div>
              <div class="property-description">
                <p class="description color-text-a">
                  <%= @property.name %>
                  <div id="prop-details" class="mb-5">
                    <%= simple_format @property.details %>
                  </div>

                  <button type="button" name="button" class="btn btn-outline-info">Show more</button>
              </div>
              <div class="row section-t3">
                <div class="col-sm-12">
                  <div class="title-box-d">
                    <h3 class="title-d">Amenities</h3>
                  </div>
                </div>
                <div class="amenities-list color-text-a">
                  <ul class="list-a no-margin">
                    <li><strong>Rooms</strong><br>
                      <span class="amenities-point"><i class="icons-amenities fas fa-home"></i><%= @property.rooms %></span>
                    </li>
                    <li><strong>Bathrooms</strong><br>
                      <span class="amenities-point"><i class="icons-amenities fas fa-bath"></i><%= @property.bathrooms %></span>
                    </li>
                    <li><strong>Bedrooms</strong><br>
                      <span class="amenities-point"><i class="icons-amenities fas fa-bed"></i><%= @property.bedrooms %></span>
                    </li>
                    <li><strong>Area</strong><br>
                      <span class="amenities-point"><i class="icons-amenities far fa-square"></i><%= @property.area %></span>
                    </li>
                    <li><strong>Garages</strong><br>
                      <span class="amenities-point"><i class="icons-amenities fas fa-car"></i><%= @property.garages %></span>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
