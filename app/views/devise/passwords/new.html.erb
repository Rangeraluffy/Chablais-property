<section class="form-auth text-center">
  <%= link_to image_tag("logo_2.png", class: "logo_signIn", alt: "logo_Peillex_Property")%>
  <h1 class="h3 mb-3 font-weight-normal">Forgot your password?</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="required_fields">
      <label for="inputEmail" class="sr-only">Email address</label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mb-2", id: "inputEmail", placeholder: "Email" %>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
