<section class="form-auth text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= link_to image_tag("logo_2.png", class: "logo_signIn", alt: "logo_Peillex_Property")%>
  <h1 class="h3 mb-3 font-weight-normal"><%= translate('signUp') %></h1>
  <div class="required_fields">
    <%= f.text_field :first_name, autofocus: true, class: "form-control mb-2", placeholder: "First name" %>
  </div>
  <div class="required_fields">
    <%= f.text_field :last_name, class: "form-control mb-2", placeholder: "Last name" %>
  </div>
  <div class="required_fields">
    <%= f.email_field :email, autocomplete: "email", class: "form-control mb-2", placeholder: "Email" %>
  </div>
  <div class="required_fields">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control mb-2", placeholder: "Password" %>
  </div>
  <div class="required_fields">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mb-2", placeholder: "Password confirmation" %>
  </div>

  <button class="btn btn-lg btn-primary btn-block" type="submit"><%= translate('signUp') %></button>

<% end %>

<%= render "devise/shared/links" %>
</section>
